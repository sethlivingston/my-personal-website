---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="font-sans min-h-screen">
    <main class="text-center">
      <h1 class="mt-20 font-title text-5xl">{SITE_TITLE}</h1>
      <p class=" my-10 text-center text-xl italic">"It's all here. Most of it. I think." &mdash;Me</p>
      <p>by <strong>Seth Livingston</strong></p>
      <p>Software engineer ever since I got my first computer in 5th grade</p>
    </main>
    <Footer />
  </body>
</html>
